generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // TG User data
  id                 Int       @id
  first_name         String
  last_name          String?
  username           String?
  photo_url          String?
  language_code      String?
  last_login         DateTime?
  allows_write_to_pm Boolean?

  // Custom data
  balance Int
}
